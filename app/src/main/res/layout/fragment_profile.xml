<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_margin="10dp"
            android:id="@+id/profile_cardview"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:paddingBottom="15dp"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/background_imageview"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/back_profile"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_width="match_parent"
                    app:layout_constraintDimensionRatio="11:2"
                    android:layout_height="0dp"/>
                <Button
                    android:backgroundTint="@color/iconcolor_reverse"
                    android:drawableLeft="@drawable/edit"
                    android:id="@+id/profile_edit"
                    android:text="edit"
                    style="?attr/borderlessButtonStyle"
                    app:layout_constraintTop_toBottomOf="@id/background_imageview"
                    android:layout_marginRight="15dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:textColor="?attr/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:background="@drawable/back_for_profile_photo"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:elevation="10dp"
                    android:id="@+id/profile_image"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/account_circle_40px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/iconcolor"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/name"
                    android:text="Vasya Pupkin Innekentich"
                    app:layout_constraintTop_toBottomOf="@id/profile_image"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="@id/name"
                    android:id="@+id/left_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    app:layout_constraintRight_toRightOf="@id/profile_edit"
                    android:id="@+id/right_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    app:layout_constraintLeft_toLeftOf="@id/left_profile"
                    android:d
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/about_cardview"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_cardview"
            android:layout_width="match_parent"
            app:cardCornerRadius="15dp"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:paddingBottom="15dp"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:text="About"
                    android:id="@+id/about"
                    android:textColor="@color/iconcolor"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/right_about"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/left_about"
                    app:layout_constraintLeft_toLeftOf="@id/about"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginTop="20dp"
                    android:id="@+id/short_desc"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/iconcolor"
                    android:textStyle="normal"
                    app:layout_constraintTop_toBottomOf="@id/edit_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/edit_about"
                    android:text="edit"
                    style="?attr/borderlessButtonStyle"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/about"
                    app:layout_constraintBottom_toBottomOf="@id/about"
                    android:layout_width="wrap_content"
                    android:backgroundTint="@color/iconcolor_reverse"
                    android:drawableLeft="@drawable/edit"
                    android:layout_marginRight="15dp"
                    android:layout_height="wrap_content" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="15dp"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@id/about_cardview"
            android:layout_width="match_parent"
            app:barrierDirection="bottom"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:paddingBottom="15dp"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="20sp"
                    android:textColor="@color/iconcolor"
                    android:text="Publications"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/publications"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/iconcolor"
                    android:textSize="12sp"
                    android:text="@string/publications1"
                    android:layout_marginTop="15dp"
                    app:layout_constraintLeft_toLeftOf="@id/publications"
                    app:layout_constraintTop_toBottomOf="@id/publications"
                    android:id="@+id/total_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="17sp"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/iconcolor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/total_count"
                    app:layout_constraintRight_toRightOf="@id/total_title"
                    app:layout_constraintLeft_toLeftOf="@id/total_title"
                    app:layout_constraintTop_toBottomOf="@id/total_title"/>
                <TextView
                    android:textColor="@color/iconcolor"
                    android:textSize="12sp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/publications2"
                    android:id="@+id/citations_title"
                    app:layout_constraintLeft_toRightOf="@id/total_title"
                    app:layout_constraintTop_toBottomOf="@id/publications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="20dp"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="@color/iconcolor"
                    android:id="@+id/citations_count"
                    app:layout_constraintLeft_toLeftOf="@id/citations_title"
                    app:layout_constraintTop_toBottomOf="@id/citations_title"
                    app:layout_constraintRight_toRightOf="@id/citations_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:id="@+id/H1_indextitle"
                    android:textSize="12sp"
                    android:textColor="@color/iconcolor"
                    android:text="@string/publications3"
                    app:layout_constraintTop_toBottomOf="@id/publications"
                    app:layout_constraintLeft_toRightOf="@id/citations_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/iconcolor"
                    android:textSize="17sp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintRight_toRightOf="@id/H1_indextitle"
                    app:layout_constraintLeft_toLeftOf="@id/H1_indextitle"
                    app:layout_constraintTop_toBottomOf="@id/H1_indextitle"
                    android:id="@+id/H1_indexcount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <View
                    app:layout_constraintTop_toBottomOf="@id/H1_indexcount"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/iconcolor"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>