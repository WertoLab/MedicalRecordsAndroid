<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_margin="10dp"
            app:cardCornerRadius="15dp"
            android:id="@+id/profile_cardview"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:paddingBottom="15dp"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/background_imageview"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/view"
                    android:src="@drawable/back_profile"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
                <Button
                    android:backgroundTint="@color/iconcolor_reverse"
                    android:drawableLeft="@drawable/edit"
                    android:id="@+id/profile_edit"
                    android:text="edit"
                    style="?attr/borderlessButtonStyle"
                    app:layout_constraintTop_toBottomOf="@id/background_imageview"
                    android:layout_marginRight="15dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:textColor="?attr/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:id="@+id/view"
                    app:layout_constraintBottom_toBottomOf="@id/profile_image"
                    app:layout_constraintRight_toRightOf="@id/profile_image"
                    app:layout_constraintTop_toTopOf="@id/profile_image"
                    app:layout_constraintLeft_toLeftOf="@id/profile_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:background="@drawable/back_for_profile_photo"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:elevation="10dp"
                    android:id="@+id/profile_image"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/account_circle_40px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="15dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/iconcolor"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:id="@+id/name"
                    android:text="Vasya Pupkin Innekentich"
                    app:layout_constraintTop_toBottomOf="@id/profile_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:drawablePadding="5dp"
                    android:textColor="@color/iconcolor"
                    android:layout_marginTop="15dp"
                    android:hint="here you can write your place of living"
                    app:layout_constraintTop_toBottomOf="@id/name"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:drawableLeft="@drawable/location_on"
                    android:id="@+id/place_of_living"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:drawablePadding="5dp"
                    android:textColor="@color/iconcolor"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:hint="here you can write your place of work"
                    android:id="@+id/place_of_work"
                    android:drawableLeft="@drawable/medical_services"
                    app:layout_constraintTop_toBottomOf="@id/place_of_living"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:drawablePadding="5dp"
                    android:textColor="@color/iconcolor"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:hint="here you can write medical societies in which you are a member"
                    android:id="@+id/medical_societies"
                    app:layout_constraintTop_toBottomOf="@id/place_of_work"
                    android:drawableLeft="@drawable/medical_societies"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/about_cardview"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_cardview"
            android:layout_width="match_parent"
            app:cardCornerRadius="15dp"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:paddingBottom="15dp"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:text="About"
                    android:id="@+id/about"
                    android:textColor="@color/iconcolor"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/short_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/iconcolor"
                    android:textStyle="normal"
                    app:layout_constraintTop_toBottomOf="@id/edit_about" />

                <Button
                    android:id="@+id/edit_about"
                    android:text="edit"
                    style="?attr/borderlessButtonStyle"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/about"
                    app:layout_constraintBottom_toBottomOf="@id/about"
                    android:layout_width="wrap_content"
                    android:backgroundTint="@color/iconcolor_reverse"
                    android:drawableLeft="@drawable/edit"
                    android:layout_marginRight="15dp"
                    android:layout_height="wrap_content" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            app:layout_constraintTop_toBottomOf="@id/about_cardview"
            android:layout_width="match_parent"
            android:id="@+id/interests_cardview"
            android:layout_margin="10dp"
            app:cardCornerRadius="15dp"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:paddingBottom="15dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="15dp"
                    android:text="Interests"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:id="@+id/interests_textview"
                    android:textColor="@color/iconcolor"
                    android:layout_marginLeft="15dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/career_oportunity"
                    android:text="Career oportunity"
                    android:textSize="15sp"
                    android:textColor="@color/iconcolor"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/interests_textview"
                    app:layout_constraintLeft_toLeftOf="@id/interests_textview"
                    android:layout_width="0dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    app:layout_constraintRight_toLeftOf="@id/edit_career_oportunity"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/current_career_oportunity"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="15dp"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical|left"
                    app:layout_constraintTop_toBottomOf="@id/career_oportunity"
                    app:layout_constraintLeft_toLeftOf="@id/interests_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/edit_career_oportunity"
                    android:text="Edit"
                    android:drawableLeft="@drawable/edit"
                    style="?attr/borderlessButtonStyle"
                    android:layout_marginRight="15dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/career_oportunity"
                    app:layout_constraintTop_toTopOf="@id/career_oportunity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <View
                    android:id="@+id/border_view"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:layout_constraintTop_toBottomOf="@id/current_career_oportunity"
                    android:background="@color/iconcolor"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <TextView
                    android:text="Medical Topics"
                    android:textColor="@color/iconcolor"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginTop="25dp"
                    android:id="@+id/medical_topics_textview"
                    app:layout_constraintTop_toBottomOf="@id/border_view"
                    app:layout_constraintLeft_toLeftOf="@id/career_oportunity"
                    android:layout_marginRight="15dp"
                    app:layout_constraintRight_toLeftOf="@id/edit_medical_topics"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <Button
                    app:layout_constraintRight_toRightOf="@id/edit_career_oportunity"
                    app:layout_constraintTop_toTopOf="@id/medical_topics_textview"
                    app:layout_constraintBottom_toBottomOf="@id/medical_topics_textview"
                    android:text="Edit"
                    android:id="@+id/edit_medical_topics"
                    android:drawableLeft="@drawable/edit"
                    style="?attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/medical_topics"
                    android:layout_marginTop="15dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/edit_medical_topics"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="25dp"
                    android:layout_marginLeft="25dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            app:layout_constraintTop_toBottomOf="@id/interests_cardview"
            android:id="@+id/experience_and_education_cardview"
            android:layout_width="match_parent"
            app:cardCornerRadius="15dp"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:paddingBottom="15dp"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="@color/iconcolor"
                    android:textStyle="bold"
                    android:text="Experience"
                    android:textSize="20sp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:id="@+id/experience_textview"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/iconcolor"
                    android:layout_marginTop="25dp"
                    app:layout_constraintTop_toBottomOf="@id/edit_experience"
                    android:id="@+id/experience"
                    android:hint="No experience added"
                    app:layout_constraintLeft_toLeftOf="@id/experience_textview"
                    app:layout_constraintRight_toLeftOf="@id/edit_experience"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/edit_experience"
                    app:layout_constraintTop_toTopOf="@id/experience_textview"
                    app:layout_constraintBottom_toBottomOf="@id/experience_textview"
                    app:layout_constraintRight_toRightOf="parent"
                    android:text="Edit"
                    android:drawableLeft="@drawable/edit"
                    style="?attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <View
                    android:id="@+id/border_line"
                    app:layout_constraintTop_toBottomOf="@id/experience"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/iconcolor"/>
                <TextView
                    android:id="@+id/education_textview"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/iconcolor"
                    android:textSize="20sp"
                    android:text="Education"
                    app:layout_constraintTop_toBottomOf="@id/border_line"
                    app:layout_constraintLeft_toLeftOf="@id/experience_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/iconcolor"
                    android:textSize="15sp"
                    android:hint="No education added"
                    android:layout_marginTop="15dp"
                    app:layout_constraintRight_toLeftOf="@id/edit_education"
                    android:layout_marginRight="15dp"
                    app:layout_constraintTop_toBottomOf="@id/edit_education"
                    app:layout_constraintLeft_toLeftOf="@id/education_textview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <Button
                    android:text="Edit"
                    android:id="@+id/edit_education"
                    android:drawableLeft="@drawable/edit"
                    style="?attr/borderlessButtonStyle"
                    app:layout_constraintTop_toTopOf="@id/education_textview"
                    app:layout_constraintBottom_toBottomOf="@id/education_textview"
                    app:layout_constraintRight_toRightOf="@id/edit_experience"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="15dp"
            android:id="@+id/publications_cardview"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@id/experience_and_education_cardview"
            android:layout_width="match_parent"
            app:barrierDirection="bottom"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:paddingBottom="15dp"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="20sp"
                    android:textColor="@color/iconcolor"
                    android:text="Publications"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/publications"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/iconcolor"
                    android:textSize="12sp"
                    android:text="@string/publications1"
                    android:layout_marginTop="15dp"
                    app:layout_constraintLeft_toLeftOf="@id/publications"
                    app:layout_constraintTop_toBottomOf="@id/publications"
                    android:id="@+id/total_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="17sp"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/iconcolor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/total_count"
                    app:layout_constraintRight_toRightOf="@id/total_title"
                    app:layout_constraintLeft_toLeftOf="@id/total_title"
                    app:layout_constraintTop_toBottomOf="@id/total_title"/>
                <TextView
                    android:textColor="@color/iconcolor"

                    android:textSize="12sp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/publications2"
                    android:id="@+id/citations_title"
                    app:layout_constraintLeft_toRightOf="@id/total_title"
                    app:layout_constraintTop_toBottomOf="@id/publications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="20dp"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="@color/iconcolor"
                    android:id="@+id/citations_count"
                    app:layout_constraintLeft_toLeftOf="@id/citations_title"
                    app:layout_constraintTop_toBottomOf="@id/citations_title"
                    app:layout_constraintRight_toRightOf="@id/citations_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:id="@+id/H1_indextitle"
                    android:textSize="12sp"
                    android:textColor="@color/iconcolor"
                    android:text="@string/publications3"
                    app:layout_constraintTop_toBottomOf="@id/publications"
                    app:layout_constraintLeft_toRightOf="@id/citations_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/iconcolor"
                    android:textSize="17sp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintRight_toRightOf="@id/H1_indextitle"
                    app:layout_constraintLeft_toLeftOf="@id/H1_indextitle"
                    app:layout_constraintTop_toBottomOf="@id/H1_indextitle"
                    android:id="@+id/H1_indexcount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <View
                    android:id="@+id/line"
                    app:layout_constraintTop_toBottomOf="@id/H1_indexcount"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/iconcolor"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_margin="15dp"
                    app:layout_constraintTop_toBottomOf="@id/line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            app:layout_constraintTop_toBottomOf="@id/publications_cardview"
            android:id="@+id/clinical_trials_cardview"
            app:cardCornerRadius="15dp"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:paddingBottom="15dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/clinical_trials_textview"
                    android:textColor="@color/iconcolor"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:text="Clinical Trials"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/total"
                    android:text="Total"
                    android:layout_marginTop="15dp"
                    app:layout_constraintTop_toBottomOf="@id/clinical_trials_textview"
                    app:layout_constraintLeft_toLeftOf="@id/clinical_trials_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="15dp"
                    app:layout_constraintTop_toBottomOf="@id/total"
                    app:layout_constraintRight_toRightOf="@id/total"
                    app:layout_constraintLeft_toLeftOf="@id/total"
                    android:id="@+id/count_of_clinical_trials"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <View
                    android:id="@+id/border_line_clinical_trials"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@id/count_of_clinical_trials"
                    android:background="@color/iconcolor"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_clinical_trials"
                    android:layout_margin="10dp"
                    app:layout_constraintTop_toBottomOf="@id/border_line_clinical_trials"
                    android:layout_width="match_parent"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>