<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:id="@+id/experience_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/right_edge_experience"
        android:layout_marginRight="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/experience_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:id="@+id/instittion_layout"
        style="?attr/textInputOutlinedStyle"
        android:hint="Institution"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toBottomOf="@id/experience_text"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/institution_edittext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/instittion_layout"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"
        android:hint="Job Title"
        android:id="@+id/job_title_layout"
        style="?attr/textInputOutlinedStyle"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/job_title_edittext"
            android:inputType="text"
            android:imeOptions="actionSearch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/job_title_layout"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginRight="15dp"
        android:id="@+id/decsription_layout"
        android:hint="Description"
        style="?attr/textInputOutlinedStyle"
        android:layout_marginLeft="15dp">
        <EditText
            android:minLines="3"
            android:id="@+id/description_edittext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="0dp"
        android:layout_marginRight="15dp"
        android:id="@+id/start_date_layout"
        app:layout_constraintTop_toBottomOf="@id/decsription_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/center"
        android:layout_marginLeft="15dp"
        android:hint="Start date"
        android:layout_marginTop="25dp"
        style="?attr/textInputOutlinedStyle"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/start_date_edittext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@id/decsription_layout"
        app:layout_constraintLeft_toRightOf="@id/center"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="25dp"
        style="?attr/textInputOutlinedStyle"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:hint="End date"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>